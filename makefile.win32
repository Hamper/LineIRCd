CUSTOMMODULE: src/modules/$(MODULEFILE).c
	$(CC) $(MODCFLAGS) src/modules/$(MODULEFILE).c $(MODLFLAGS) \
	      /OUT:src/modules/$(MODULEFILE).dll $(EXLIBS)

SYMBOLFILE: $(EXP_OBJ_FILES)
